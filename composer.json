{
    "name": "sofyco/pagination",
    "type": "library",
    "version": "3.0.0",
    "description": "Pagination Library",
    "keywords": ["php", "pagination", "library"],
    "homepage": "https://github.com/sofyco/pagination",
    "license": "MIT",
    "authors": [
        {
            "name": "Sofiia Korzhova",
            "email": "sofykorzhova@gmail.com"
        }
    ],
    "require": {
        "php": "^8.5"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.4"
    },
    "autoload": {
        "psr-4": {
            "Sofyco\\Pagination\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sofyco\\Pagination\\Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
